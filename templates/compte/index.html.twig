{% extends 'base.html.twig' %}

{% block title %}{{'compte.titre'|trans}}{% endblock %}

{% block body %}


<p>{{'compte.nom'|trans}} : {{ user.nom}} </p> 
<p>{{'compte.prenom'|trans}} : {{ user.prenom }}</p>
<p>{{'compte.mail'|trans}} : {{ user.email }}</p>

<p>{{'compte.edit'|trans}}</p>

{{form (form_edit)}}

            <p>{{'compte.historique'|trans}}</p>

                    {% for panier in paniers %}
                    <div class="card">
                    <div class="card-body">
                    <p>{{'compte.panier'|trans}} : {{ panier.id }}</p>

                    <p>{{'compte.achat'|trans}} : {{ panier.date|date('Y-m-d H:i:s')}}</p>

                      <a type="button" class="btn btn-primary btn-lg btn-block"  href="{{ path('contenu',{'id': panier.id}) }}">{{'compte.detail'|trans}}</a>

                    </div>
                    </div>
                    
                    {% endfor %}

{% endblock %}
